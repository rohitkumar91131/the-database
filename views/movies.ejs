<%- include('partials/header') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <div class="mb-8 flex justify-center">
        <form action="/movies" method="GET" class="w-full max-w-lg relative">
            <input 
                type="text" 
                name="search" 
                value="<%= search %>"
                placeholder="Search movies (e.g. Avatar, Batman)..."
                class="w-full bg-gray-800 text-white border border-gray-700 rounded-full py-3 px-6 pl-12 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent placeholder-gray-500"
            >
            <svg class="w-6 h-6 text-gray-500 absolute left-4 top-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                 d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
        </form>
    </div>

    <% if (movies.length > 0) { %>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6">
            <% movies.forEach(movie => { %>
                <a href="/movies/<%= movie._id %>" 
                   class="group block relative rounded-lg overflow-hidden bg-gray-800 hover:shadow-2xl hover:shadow-blue-900/20 transition duration-300 transform hover:-translate-y-1">
                    
                    <div class="aspect-[2/3] w-full relative bg-gray-700 overflow-hidden">
                        
                        <!-- Blurred Placeholder -->
                        <img 
                            src="<%= movie.posterDataUrl %>" 
                            alt="blur"
                            class="absolute inset-0 w-full h-full object-cover blur-xl scale-110"
                        >

                        <!-- Real Image -->
                        <img 
                            src="<%= movie.posterImageUrl %>" 
                            alt="<%= movie.title %>" 
                            loading="lazy"
                            class="absolute inset-0 w-full h-full object-cover transition-opacity duration-500 opacity-0 z-10 onload-reveal"
                            onload="this.classList.remove('opacity-0')"
                        >

                        <!-- Rating -->
                        <div class="absolute top-2 right-2 z-20 bg-black/70 backdrop-blur-sm text-yellow-400 text-xs font-bold px-2 py-1 rounded flex items-center">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            <%= movie.voteAverage.toFixed(1) %>
                        </div>

                    </div>

                    <div class="p-4">
                        <h3 class="text-white font-semibold text-sm truncate group-hover:text-blue-400 transition">
                            <%= movie.title %>
                        </h3>
                        <p class="text-gray-400 text-xs mt-1">
                            <%= new Date(movie.releaseDate).getFullYear() %>
                        </p>
                    </div>

                </a>
            <% }) %>
        </div>

        <!-- Pagination -->
        <div class="mt-12 flex justify-center items-center space-x-4">
            <% if (currentPage > 1) { %>
                <a href="/movies?page=<%= currentPage - 1 %>&search=<%= search %>" 
                   class="px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-700 transition">
                   Previous
                </a>
            <% } %>

            <span class="text-gray-400 text-sm">
                Page <span class="text-white font-bold"><%= currentPage %></span> of <%= totalPages %>
            </span>

            <% if (currentPage < totalPages) { %>
                <a href="/movies?page=<%= currentPage + 1 %>&search=<%= search %>" 
                   class="px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-700 transition">
                   Next
                </a>
            <% } %>
        </div>

    <% } else { %>
        <div class="text-center py-20">
            <h2 class="text-2xl font-bold text-gray-500">No movies found.</h2>
            <p class="text-gray-600 mt-2">Try searching for something else.</p>
        </div>
    <% } %>

</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
    const images = document.querySelectorAll('img.onload-reveal');
    images.forEach(img => {
        if (img.complete) {
            img.classList.remove('opacity-0');
        }
    });
});
</script>

<%- include('partials/footer') %>
