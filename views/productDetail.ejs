<%- include('partials/header') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <a href="/products" class="inline-flex items-center text-gray-500 hover:text-pink-500 mb-12 transition-colors font-bold text-xs tracking-widest uppercase">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
        Back to Inventory
    </a>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
        
        <div class="bg-white rounded-3xl p-12 relative group shadow-2xl overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-pink-500/5 to-transparent opacity-0 group-hover:opacity-100 transition duration-700"></div>
            <img src="<%= product.image %>" alt="<%= product.title %>" class="w-full h-auto object-contain max-h-[500px] group-hover:scale-105 transition duration-700">
        </div>

        <div class="space-y-8 animate-fade-in-up">
            <div>
                <span class="px-3 py-1 bg-pink-500/10 text-pink-500 border border-pink-500/20 rounded-full text-[10px] font-black uppercase tracking-widest">
                    <%= product.category %>
                </span>
                <h1 class="text-4xl md:text-5xl font-black text-white mt-4 leading-tight">
                    <%= product.title %>
                </h1>
            </div>

            <div class="flex items-center gap-6">
                <div class="text-4xl font-black text-white">$<%= product.price.toFixed(2) %></div>
                <div class="h-8 w-[1px] bg-gray-800"></div>
                <div class="flex items-center text-yellow-500">
                    <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                    <span class="font-bold"><%= product.rating.rate %></span>
                    <span class="text-gray-500 text-sm ml-2 font-medium">(<%= product.rating.count %> units verified)</span>
                </div>
            </div>

            <div class="p-8 bg-[#0f172a] border border-gray-800 rounded-2xl">
                <h3 class="text-gray-400 text-xs font-black uppercase tracking-widest mb-4">Technical Description</h3>
                <p class="text-gray-300 leading-relaxed font-light text-lg">
                    <%= product.description %>
                </p>
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
                <button class="flex-1 py-5 bg-pink-600 hover:bg-pink-500 text-white font-black text-xs uppercase tracking-[0.2em] rounded-xl transition shadow-lg shadow-pink-600/20 active:scale-95">
                    Authorize Transaction
                </button>
                <button class="px-8 py-5 border border-gray-700 hover:border-gray-500 text-gray-400 hover:text-white rounded-xl transition">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
                </button>
            </div>

        </div>
    </div>
</div>

<%- include('partials/footer') %>