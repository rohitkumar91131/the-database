<%- include('partials/header') %>

<div class="max-w-3xl mx-auto px-4 py-20">
    <div class="bg-[#0f172a] rounded-3xl border border-gray-800 p-8 shadow-2xl animate-fade-in-up">
        <h1 class="text-3xl font-black text-white mb-8 flex items-center gap-3">
            <i class="fa-solid fa-plus-circle text-pink-500"></i>
            NEW ASSET REGISTRATION
        </h1>

        <form action="/products/add" method="POST" enctype="multipart/form-data" class="space-y-6">
            
            <div class="space-y-2">
                <label class="text-xs font-bold text-gray-500 uppercase tracking-widest">Asset Title</label>
                <input type="text" name="title" required class="w-full bg-black/50 border border-gray-700 rounded-xl px-4 py-3 text-white focus:border-pink-500 outline-none">
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div class="space-y-2">
                    <label class="text-xs font-bold text-gray-500 uppercase tracking-widest">Price (USD)</label>
                    <input type="number" step="0.01" name="price" required class="w-full bg-black/50 border border-gray-700 rounded-xl px-4 py-3 text-white focus:border-pink-500 outline-none">
                </div>
                <div class="space-y-2">
                    <label class="text-xs font-bold text-gray-500 uppercase tracking-widest">Category</label>
                    <select name="category" class="w-full bg-black/50 border border-gray-700 rounded-xl px-4 py-3 text-white focus:border-pink-500 outline-none">
                        <option value="electronics">Electronics</option>
                        <option value="jewelery">Jewelery</option>
                        <option value="clothing">Clothing</option>
                    </select>
                </div>
            </div>

            <div class="space-y-2">
                <label class="text-xs font-bold text-gray-500 uppercase tracking-widest">Visual Asset (Photo)</label>
                <div class="relative group">
                    <input type="file" name="image" accept="image/*" required class="w-full bg-black/50 border border-dashed border-gray-700 rounded-xl px-4 py-10 text-gray-500 text-center cursor-pointer hover:border-pink-500 transition">
                    <div class="absolute inset-0 flex items-center justify-center pointer-events-none text-xs font-bold">
                        <i class="fa-solid fa-cloud-arrow-up mr-2"></i> SELECT FROM DEVICE
                    </div>
                </div>
            </div>

            <div class="space-y-2">
                <label class="text-xs font-bold text-gray-500 uppercase tracking-widest">Description</label>
                <textarea name="description" rows="4" class="w-full bg-black/50 border border-gray-700 rounded-xl px-4 py-3 text-white focus:border-pink-500 outline-none"></textarea>
            </div>

            <button type="submit" class="w-full py-4 bg-pink-600 hover:bg-pink-500 text-white font-black rounded-xl transition-all shadow-lg shadow-pink-600/20 uppercase tracking-widest">
                Authorize & Upload
            </button>
        </form>
    </div>
</div>

<%- include('partials/footer') %>