<%- include('partials/header') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="flex flex-col md:flex-row gap-12 items-start">
        
        <div class="w-full md:w-1/3 lg:w-1/4">
            <div class="rounded-2xl overflow-hidden border border-gray-800 shadow-2xl mb-6">
                <img src="<%= actor.profileImageUrl %>" class="w-full h-auto" alt="<%= actor.name %>">
            </div>
            
            <div class="bg-gray-900/50 rounded-2xl p-6 border border-gray-800 space-y-4">
                <h2 class="text-sm font-bold text-cyan-500 uppercase tracking-widest">Personal Info</h2>
                <div>
                    <p class="text-gray-500 text-xs">Birthday</p>
                    <p class="text-white"><%= actor.birthday ? new Date(actor.birthday).toDateString() : 'N/A' %></p>
                </div>
                <div>
                    <p class="text-gray-500 text-xs">Place of Birth</p>
                    <p class="text-white"><%= actor.placeOfBirth || 'N/A' %></p>
                </div>
                <div>
                    <p class="text-gray-500 text-xs">Department</p>
                    <p class="text-white"><%= actor.knownForDepartment %></p>
                </div>
            </div>
        </div>

        <div class="flex-1">
            <h1 class="text-5xl md:text-7xl font-extrabold text-white mb-4"><%= actor.name %></h1>
            
            <div class="flex items-center gap-4 mb-8">
                <span class="px-3 py-1 bg-cyan-500/10 border border-cyan-500/30 text-cyan-400 text-xs font-bold rounded-full">
                    POPULARITY: <%= actor.popularity.toFixed(1) %>
                </span>
            </div>

            <h3 class="text-xl font-bold text-white mb-4 border-b border-gray-800 pb-2">Biography</h3>
            <p class="text-gray-400 text-lg leading-relaxed whitespace-pre-line mb-10">
                <%= actor.biography || 'No biography available for this talent in the Nexus database.' %>
            </p>

            <button onclick="history.back()" class="text-gray-500 hover:text-white flex items-center transition group">
                <span class="mr-2 group-hover:-translate-x-1 transition-transform">&larr;</span> Back to Talent List
            </button>
        </div>
    </div>
</div>

<%- include('partials/footer') %>